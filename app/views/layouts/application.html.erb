  </head>

  <body>
    <nav class="navbar navbar-expand-lg bg-light navbar-light navbar-lewagon">
      <%= link_to "Cocktail sur Rail", root_path, class: "navbar-brand" %>
      <div class="navbar-nav">
        <div class="nav-item">
          <%= link_to "Add Cocktail", new_cocktail_path, class: "nav-link" %>
        </div>
      </div>
    </nav>
    <%= yield %>
  </body>
</html>
